@model ProjectDetailsViewModel

<!-- Researchers create a project here. -->

@if (ViewBag.submission != null)
{
    <div class="alert @ViewBag.AlertType">
        <strong>@ViewBag.submission</strong>
    </div>
}


<h1>Create A Project Here</h1>

<form method="post" asp-action="CreateProject">

    <div asp-validation-summary="All" class="text-danger"></div>


    <div class="form-group">
        <label asp-for="ResearchOrganization"></label>
        <input asp-for="ResearchOrganization" class="form-control" />
        <span asp-validation-for="ResearchOrganization" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="ProjectTitle"></label>
        <input asp-for="ProjectTitle" class="form-control" />
        <span asp-validation-for="ProjectTitle" class="text-danger"></span>
    </div>


    <div class="form-group input-group-lg">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="RequiredNumberOfParticipants"></label>
        <input asp-for="RequiredNumberOfParticipants" class="form-control" />
        <span asp-validation-for="RequiredNumberOfParticipants" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>


    <div class="form-group">
        <input asp-for="ApplicationStatus" type="hidden" value="Pending Review" />
    </div>


    <button type="submit" class="btn btn-primary"> Create Project</button>


</form>


