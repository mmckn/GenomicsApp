@model UpdateProjectStatusViewModel

<!-- Researchers give a general update to every project contributor. -->

@if (ViewBag.submission != null)
{
    <div class="alert @ViewBag.AlertType">
        <strong>@ViewBag.submission</strong>
    </div>
}


<h1> Update your study progress here.</h1>

<form method="post" asp-action="UpdateProjectProgress">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="ProjectUpdate"></label>
        <input asp-for="ProjectUpdate" class="form-control" />
        <span asp-validation-for="ProjectUpdate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProjectProgress"></label>
        <input asp-for="ProjectProgress" class="form-control" />
        <span asp-validation-for="ProjectProgress" class="text-danger"></span>
    </div>



    <div class="form-group">
        <input asp-for="ProjectId" type="hidden" value="@Model.ProjectId" />
    </div>

    <button type="submit" class="btn btn-primary"> Update Project</button>

</form>


